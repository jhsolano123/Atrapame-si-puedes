<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/tron_dark_bg">

    <!-- Game Info Panel - Tron Style -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp"
        android:background="@drawable/tron_panel_bg"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvMoves"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/moves_initial"
            style="@style/TronTextStats"
            android:shadowColor="@color/tron_cyan_glow"
            android:shadowRadius="8"
            android:shadowDx="0"
            android:shadowDy="0" />

        <TextView
            android:id="@+id/tvTime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/time_initial"
            style="@style/TronTextStats"
            android:gravity="end"
            android:shadowColor="@color/tron_cyan_glow"
            android:shadowRadius="8"
            android:shadowDx="0"
            android:shadowDy="0" />

    </LinearLayout>

    <!-- Game Board Container - Tron Grid -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/tron_grid_bg"
        android:padding="12dp">

        <com.equipo.atrapame.presentation.game.IsometricBoardView
            android:id="@+id/gameBoard"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/game_board_content_description"
            android:importantForAccessibility="yes" />

        <TextView
            android:id="@+id/tvGameStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/tron_panel_bg"
            android:padding="24dp"
            android:text="@string/loading"
            style="@style/TronTextTitle"
            android:textSize="24sp"
            android:shadowColor="@color/tron_cyan_glow"
            android:shadowRadius="15"
            android:shadowDx="0"
            android:shadowDy="0"
            android:visibility="gone" />

    </FrameLayout>

    <!-- Game Controls - Tron Style -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp">

    <com.equipo.atrapame.presentation.game.VirtualJoystickView
        android:id="@+id/joystick"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:contentDescription="@string/joystick_content_description"
        android:importantForAccessibility="yes"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:id="@+id/layoutButtons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

    <Button
        android:id="@+id/btnPause"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginEnd="12dp"
        android:minWidth="120dp"
        android:text="@string/btn_pause"
        style="@style/GameButton"
        android:layout_margin="0dp"
        android:strokeColor="@color/tron_orange"
        android:textColor="@color/tron_orange" />

        <Button
            android:id="@+id/btnRestart"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:minWidth="120dp"
            android:text="@string/btn_restart"
            style="@style/GameButton"
            android:layout_margin="0dp" />

    </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>
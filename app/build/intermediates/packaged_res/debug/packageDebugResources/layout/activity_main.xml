<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center"
    android:background="@color/tron_dark_bg">

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginBottom="16dp"
        android:src="@mipmap/ic_launcher"
        android:contentDescription="@string/app_name" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/main_title"
        style="@style/TronTextTitle"
        android:textSize="32sp"
        android:layout_marginBottom="8dp"
        android:gravity="center"
        android:shadowColor="@color/tron_cyan_glow"
        android:shadowRadius="10"
        android:shadowDx="0"
        android:shadowDy="0" />

    <View
        android:layout_width="200dp"
        android:layout_height="2dp"
        android:background="@color/tron_cyan"
        android:layout_marginBottom="48dp" />

    <Button
        android:id="@+id/btnPlay"
        style="@style/GameButtonPrimary"
        android:text="@string/btn_play"
        android:drawableStart="@android:drawable/ic_media_play"
        android:drawableTint="@color/tron_dark_bg"
        android:drawablePadding="8dp" />

    <Button
        android:id="@+id/btnConfig"
        style="@style/GameButton"
        android:text="@string/btn_config"
        android:drawableStart="@android:drawable/ic_menu_preferences"
        android:drawableTint="@color/tron_cyan"
        android:drawablePadding="8dp" />

    <Button
        android:id="@+id/btnScores"
        style="@style/GameButton"
        android:text="@string/btn_scores"
        android:drawableStart="@android:drawable/ic_menu_sort_by_size"
        android:drawableTint="@color/tron_cyan"
        android:drawablePadding="8dp" />

    <Button
        android:id="@+id/btnExit"
        style="@style/GameButton"
        android:text="@string/btn_exit"
        android:strokeColor="@color/tron_orange"
        android:textColor="@color/tron_orange"
        android:drawableStart="@android:drawable/ic_menu_close_clear_cancel"
        android:drawableTint="@color/tron_orange"
        android:drawablePadding="8dp" />

</LinearLayout>
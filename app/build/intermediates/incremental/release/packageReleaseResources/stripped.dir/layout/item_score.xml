<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@color/tron_darker_bg"
    app:strokeColor="@color/tron_cyan"
    app:strokeWidth="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tvPosition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="#1"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/tron_cyan"
            android:layout_marginEnd="16dp"
            android:minWidth="40dp"
            android:fontFamily="monospace"
            android:shadowColor="@color/tron_cyan_glow"
            android:shadowRadius="5"
            android:shadowDx="0"
            android:shadowDy="0" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvPlayerName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nombre del Jugador"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/tron_cyan" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp">

                <TextView
                    android:id="@+id/tvMoves"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="25 movimientos"
                    android:textSize="13sp"
                    android:textColor="@color/tron_cyan_glow"
                    android:fontFamily="monospace" />

                <TextView
                    android:id="@+id/tvTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="02:30"
                    android:textSize="13sp"
                    android:textColor="@color/tron_cyan_glow"
                    android:layout_marginStart="8dp"
                    android:fontFamily="monospace" />

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/tvDifficulty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Medium"
            android:textSize="11sp"
            android:textColor="@color/tron_dark_bg"
            android:background="@color/tron_orange"
            android:padding="6dp"
            android:layout_marginStart="8dp"
            android:textStyle="bold" />

    </LinearLayout>

</androidx.cardview.widget.CardView>